<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_posted_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="a hh:mm:ss dd MM yyyy"
        android:layout_alignBaseline="@+id/ib_delete"
        android:textSize="12sp"/>
    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="#0f00"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_posted_userid"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="UserID"
        android:textSize="15sp"
        android:background="@drawable/textspace_form"/>

    <TextView
        android:id="@+id/tv_posted_post"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:lines="3"
        android:padding="10dp"
        android:text="Written post"
        android:background="@drawable/textspace_form"/>

</LinearLayout>